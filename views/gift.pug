extends layout

block content
  h1= title

  //- let items=[{gift_name:"Diamond",numof_gifts:1,gift_value:"Most Valuable"},{gift_name:"Gold",numof_gifts:2,gift_value:"More Valuable"},{gift_name:"Car",numof_gifts:1,gift_value:"Valuable"}]
  - let items=results
  div(class="container-fluid")
   div(class="row")
    each value,index in items
      div(class="col-sm-2" onclick=`buy(${index})`)  #{value.gift_name} Gift, Number of Gifts is/are #{value.numof_gifts}, and it is #{value.gift_value}
  script. 
    function buy(index)
    {
      alert(`You purchased Item ${index+1}`)
    }